<% #THERE MUST BE A DRYER WAY TO INSERT 'shared/flash_message_js' PARTIAL INTO THIS PARTIAL! %>

if($('#error-messages').hasClass('alert-error')){
  $('#error-messages').removeClass('alert-error');
}else if($('#error-messages').hasClass('alert-warning')){
  $('#error-messages').removeClass('alert-warning');
};


<% if flash[:error].present? %>
  $('#error-messages').addClass('alert alert-danger');
  $('#error-messages').html('<%= "#{ flash[:error]   }" %>');
<% elsif flash[:notice].present? %>
  $('#error-messages').addClass('alert alert-warning');
  $('#error-messages').html('<%= "#{ flash[:notice]  }" %>');
<% elsif flash[:success].present? %>
  $('#error-messages').addClass('alert alert-success');

  $('#error-messages').html('<%= "#{ flash[:success] }" %>');
<% end %>


<% if @success && session[:search_city] %>
  $('#search_location_text').html('<%= "#{session[:search_city]}, #{session[:search_state]}" %>');
<% elsif @success && session[:search_zipcode] %>
  $('#search_location_text').html('<%= "#{session[:search_zipcode]}" %>');
<% end %>
