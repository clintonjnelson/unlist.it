-provide(:title, 'Unlist.it')

//Code for the registration form
.row.col-xs-11.col-sm-9.col-md-8.col-xs-offset-1.well.generic-content
  %h4 Choose A New Password
  %p  Just Pick A New Password Below & You're Back In Action.
  %br

  .resetpassword-form
    =form_tag reset_passwords_path do |f|
      =label_tag       :password, "Pick A New Password"
      =password_field_tag    :password
      =hidden_field_tag :token, @token
      =submit_tag "Change Password", class: "btn btn-primary"
