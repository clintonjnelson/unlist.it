/-#///////////////////// ADMIN DROPDOWN MENUS ///////////////////////////
-if (signed_in? && current_user.admin?)
  .dropdown#navbutton-admin-users
    %a.btn.dropdown-toggle.sr-only(data-toggle='dropdown')
      Users
      %span.caret
    %ul.dropdown-menu(role='menu' aria-labelledby='AdminUsersMenu')
      %li(role='presentation')
        =link_to admin_users_path(current_user), { role: 'menuitem', tabindex:"-1" } do
          %i.glyphicon.glyphicon-warning-sign
          manage users
      %li(role='presentation')
        =link_to new_user_invitation_path(current_user), { role: 'menuitem', tabindex:"-1" } do
          %i.glyphicon.glyphicon-send
          send invitation
      %li(role='presentation')
        =link_to admin_invitations_path, { role: 'menuitem', tabindex:"-1" } do
          %i.glyphicon.glyphicon-align-justify
          sent invitations

  .dropdown#navbutton-admin-components
    %a.btn.dropdown-toggle.sr-only(data-toggle='dropdown')
      Components
      %span.caret
    %ul.dropdown-menu(role='menu' aria-labelledby='AdminComponentsMenu')
      %li(role='presentation')
        =link_to  new_admin_category_path, { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-plus
          add category
      %li(role='presentation')
        =link_to new_admin_condition_path, { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-plus-sign
          add condition

      %li(role='presentation')
        =link_to "view all",      admin_categories_path, { role: 'menuitem', tabindex: "-1" }

  .dropdown#navbutton-admin-messages
    %a.btn.dropdown-toggle.sr-only(data-toggle='dropdown')
      Messages
      %span.caret
    %ul.dropdown-menu(role='menu' aria-labelledby='AdminMessagesMenu')
      %li(role='presentation')
        =link_to admin_messages_path(type: 'received'), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-envelope
          inbox
      %li(role='presentation')
        =link_to admin_messages_path(type: 'sent'), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-share-alt
          sent
      %li(role='presentation')
        =link_to admin_messages_path(type: 'contact'), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-volume-down
          contact
      %li(role='presentation')
        =link_to admin_messages_path(type: 'feedback'), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-volume-up
          feedback
      %li(role='presentation')
        =link_to admin_messages_path(type: 'joined'), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-ok-circle
          joined
      %li(role='presentation')
        =link_to 'all',  admin_messages_path, { role: 'menuitem', tabindex: "-1" }


  /-#////////////////////// USER DROPDOWN MENUS /////////////////////////
-elsif signed_in?
  %div
    =link_to browse_path, { role: 'menuitem', tabindex: "-1" } do
      %i.fa.fa-globe.fa-2
      browse

  .dropdown#navbutton-user-unlist
    %a.btn.dropdown-toggle.sr-only(data-toggle='dropdown')
      Unlistings
      %span.caret
    %ul.dropdown-menu(role='menu' aria-labelledby='UserUnlistMenu')
      %li(role='presentation')
        =link_to new_user_unlisting_path(current_user), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-plus
          add unlisting
      %li(role='presentation')
        =link_to user_unlist_path(current_user, type: 'unlist'), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-list-alt
          unlist (wishlist)
      %li(role='presentation')
        =link_to user_unlist_path(current_user, type: 'hits'), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-star
          hits
      %li(role='presentation')
        =link_to user_unlist_path(current_user, type: 'found'), { role: 'menuitem', tabindex: "-1" } do
          %i.fa.fa-check.fa-2
          found
      %li(role='presentation')
        =link_to user_relationships_path(current_user), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-heart
          friends

  .dropdown#navbutton-user-unlist
    %a.btn.dropdown-toggle.sr-only(data-toggle='dropdown')
      Messages
      %span.caret
    %ul.dropdown-menu(role='menu' aria-labelledby='UserUnlistMenu')
      %li(role='presentation')
        =link_to user_messages_path(current_user, type: 'received'), { role: 'menuitem', tabindex: "-1" } do
          %i.fa.fa-envelope-o.fa-2
          inbox
      %li(role='presentation')
        =link_to user_messages_path(current_user, type: 'hits'), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-star-empty
          hits
      %li(role='presentation')
        =link_to user_messages_path(current_user, type: 'sent'), { role: 'menuitem', tabindex: "-1" } do
          %i.glyphicon.glyphicon-share-alt
          sent
      %li(role='presentation')
        =link_to 'all',  user_messages_path(current_user), { role: 'menuitem', tabindex: "-1" }

  %div
    =link_to new_user_invitation_path(current_user), { role: 'menuitem', tabindex: "-1" } do
      %i.fa.fa-envelope.fa-2
      invite!


  /-#///////////////////// GUEST DROPDOWN MENUS /////////////////////////
-else
  #navbuttons-guest
    =link_to 'Browse',    browse_path
    =link_to 'Tour',      tour_path
    =link_to 'About',     about_path
    =link_to 'FAQ',       faq_path
    =link_to 'Contact',   contact_path
