#footer
  -if (signed_in? && current_user.admin?)
    .dropdown#navbutton-admin-blog
      %a.btn.dropdown-toggle.sr-only(data-toggle='dropdown')
        Blog
        %span.caret
      %ul.dropdown-menu(role='menu' aria-labelledby='AdminBlogMenu')
        %li(role='presentation')
          =link_to '#new_post', { role: 'menuitem', tabindex: "-1" } do
            %i.icon-plus
            New Post
        %li(role='presentation')
          =link_to "#view posts", '#', { role: 'menuitem', tabindex: "-1" }

    .dropdown#navbutton-admin-settings
      %a.btn.dropdown-toggle.sr-only(data-toggle='dropdown')
        Settings
        %span.caret
      %ul.dropdown-menu(role='menu' aria-labelledby='AdminSettingsMenu')
        %li(role='presentation')
          =link_to "settings",  edit_admin_setting_path(current_user), { role: 'menuitem', tabindex:"-1" }

  -if (signed_in?)
    .dropdown#navbutton-user-info
      %a.btn.dropdown-toggle.sr-only(data-toggle='dropdown')
        info
        %span.caret
      %ul.dropdown-menu(role='menu' aria-labelledby='AdminBlogMenu')
        %li(role='presentation')
          =link_to "faq", faq_path, { role: 'menuitem', tabindex: "-1" }
        %li(role='presentation')
          =link_to "about", about_path, { role: 'menuitem', tabindex: "-1" }
        %li(role='presentation')
          =link_to "tour", tour_path, { role: 'menuitem', tabindex: "-1" }
        / %li(role='presentation')
        /   =link_to '#', { role: 'menuitem', tabindex: "-1" } do
        /     %i.icon-plus
        /     Add Stuff
    %div= link_to 'feedback', user_feedback_path(current_user), { role: 'menuitem', tabindex: "-1" }
    %div= link_to 'send invitation', new_user_invitation_path(current_user), { role: 'menuitem', tabindex: "-1" }

  -else
    / %a(href="") Link
    / %a(href="") Link2
    / %a(href="") Link3
