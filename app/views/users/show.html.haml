-provide(:title, '')

//Code to show user & summary info
.row#userbox.col-xs-8
  #showusercontent.well
    .gravatar= @user.decorator.avatar_image_tag(60)
    %h2.text-left#profile-name
      ="#{@user.username.capitalize}'s Profile"
      %small= link_to "[edit info]", edit_user_path(current_user)
    %hr.hr-lg-dashed

    %p= "Email: #{@user.email}"
    %p= "Password: ***hidden***"
    %p
      ="Default Location: "
      -if @user.location.zipcode.present?
        %span= "#{@user.zipcode}"
      -elsif @user.location.state && @user.location.city
        %span= "#{@user.location.city.capitalize}, #{@user.location.state.upcase}"
    %p= "[DISPLAY THIS LOCATION NAME & MAYBE MAP]"

    %hr.hr-xs-solid
    %h5= "Status"
    %p= "Number of Unlistings: #{@user.unlistings.active.count} Unlistings"
